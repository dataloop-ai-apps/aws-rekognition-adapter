{
  "displayName": "AWS Detect Text",
  "name": "aws-detect-text",
  "scope": "public",
  "version": "0.1.0",
  "attributes": {
    "Provider": "AWS",
    "Category": "Application",
    "Application Type": [
      "Pipeline Node"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/aws-rekognition-adapter.git",
    "gitTag": "0.1.0"
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "aws-detect-text-v2.aws_detect_text_v2.detect_text"
        },
        "name": "Detect Text",
        "categories": [
          "AWS-Rekognition"
        ],
        "displayName": "Detect Text",
        "description": "AWS Rekognition Detect Text Model",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "AWS Rekognition Detect Text",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "threshold",
              "title": "Confidence Threshold",
              "props": {
                "type": "number",
                "default": 0.8,
                "min": 0,
                "max": 1,
                "step": 0.05,
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-slider"
            },
            {
              "name": "annotation_type",
              "title": "Annotation Type",
              "props": {
                "type": "string",
                "required": true,
                "options": [
                  {
                    "value": "Box",
                    "label": "Box"
                  },
                  {
                    "value": "Polygon",
                    "label": "Polygon"
                  }
                ]
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error",
                  "errorMessage": "Annotation Type is required"
                }
              ],
              "widget": "dl-select"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "aws_detect_text_v2",
        "entryPoint": "modules/detect_text/detect_text.py",
        "className": "ServiceRunner",
        "initInputs": [
          {
            "type": "String",
            "name": "integration_name"
          }
        ],
        "functions": [
          {
            "name": "detect_text",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "icon-dl-aws-dark",
            "displayName": "Detect Text"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "aws-detect-text-v2",
        "moduleName": "aws_detect_text_v2",
        "secrets": [],
        "runtime": {
          "podType": "regular-s",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        },
        "operation": "none"
      }
    ]
  }
}